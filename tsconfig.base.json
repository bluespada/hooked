{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@renderer/*": ["./platform/desktop/src/renderer/src"],
            "@hooked/app-main/*": ["./apps/main/*"],
            "@hooked/app-mobile/*": ["./apps/mmobile/*"],
            "@hooked/store/*": ["./packages/store/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules", "dist", "build"]
}
